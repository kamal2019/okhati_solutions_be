{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "composite": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts", // Replace with the path and pattern that matches your TypeScript files
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}